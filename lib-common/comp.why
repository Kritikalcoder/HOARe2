theory Bool

  (* ******************************************************************** *)
  (* Extra comparison facts. *)
  use import real.RealInfix
  use import bool.Bool

  function eqp (r1 r2 : 'a) : bool = r1 = r2

  function lt_real (r1 r2 : real) : bool =
  if r1 <. r2 then
     True
  else
     False

  function le_real (r1 r2 : real) : bool =
  if r1 <=. r2 then
     True
  else
     False

  function ge_real (r1 r2 : real) : bool =
  if r1 >=. r2 then
     True
  else
     False

end
